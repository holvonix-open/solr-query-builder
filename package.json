{
  "name": "solr-query-maker",
  "version": "0.2.1",
  "description": "A Solr Query builder and types",
  "repository": {
    "type": "git",
    "url": "https://github.com/holvonix-open/solr-query-maker.git"
  },
  "keywords": [
    "solr",
    "query",
    "builder",
    "maker",
    "search"
  ],
  "engines": {
    "node": "^10.15.3",
    "yarn": "^1.12.3"
  },
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "LICENSE",
    "NOTICE",
    "README.md"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**",
      "prettier.config.js",
      "**/*.d.ts",
      "test/**/*.*",
      "build/**/**/*.js"
    ],
    "all": true
  },
  "author": "Holvonix LLC",
  "license": "SEE LICENSE IN LICENSE",
  "private": false,
  "scripts": {
    "t": "yarn fix && yarn test --grep='#slow' --invert && yarn coverage",
    "cleantests": "rm -rf *.lcov .nyc_output coverage",
    "clean": "gts clean",
    "start": "node index.js",
    "debug": "node --inspect index.js",
    "cleanstart": "yarn clean; yarn start",
    "test": "nyc ts-mocha -p ./tsconfig.json 'test/**/*.ts'",
    "test-coverage": "yarn clean && yarn test && yarn report-coverage",
    "coverage": "nyc report --reporter=lcov --reporter=json",
    "report-coverage": "yarn coverage && codecov -F unit -f coverage/*.json",
    "lint": "yarn fix && yarn check",
    "check": "gts check",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "fix": "gts fix",
    "prepare": "yarn clean && yarn check && yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run check",
    "preversion": "yarn test"
  },
  "dependencies": {
    "lodash.reduce": "^4.6.0",
    "terraformer-wkt-parser": "^1.2.0"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.7",
    "@types/lodash.reduce": "^4.6.6",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.6.1",
    "codecov": "^3.4.0",
    "gts": "^1.0.0",
    "mocha": "^6.1.4",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "terraformer": "https://github.com/holvonix-open/terraformer#typesafety",
    "ts-mocha": "^6.0.0",
    "typescript": "~3.5.0"
  }
}
